<div class="container">
    <h1 class="my-5">Edit drone {{name}}</h1>
    <div class="row">
        <div class="col-5">
            <form class="row g-3" action="/drones/{{_id}}/edit" enctype="multipart/form-data" method="post">
                <div class="col-12 ">
                    <label for="droneName" class="form-label">Drone Name</label>
                    <input required type="text" class="form-control" placeholder="Drone Name" value="{{name}}" name="name" id="droneName">
                </div>
                <div class="col-12 ">
                    <label for="propellers" class="form-label">Add number of propellers</label>
                    <input required type="number" class="form-control" placeholder="Add number of propellers" value="{{propellers}}" name="propellers" id="propellers">

                </div>
                <div class="col-12 ">
                    <label for="maxSpeed" class="form-label">Add max speed</label>
                    <input required type="number" class="form-control" placeholder="Add max speed" value="{{maxSpeed}}" name="maxSpeed" id="maxSpeed">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Select one image</label>
                    <input required class="form-control" type="file" name="image" accept="image/*" id="image">
                </div>
                <div class="col-12 align-self-center">
                    <button class="btn btn-primary" type="submit">Add Drone</button>
                </div>
            </form>
        </div>
